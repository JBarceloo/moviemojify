---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";

import EmojiResult from "../components/EmojiResult";

---

<Layout title="Memojify">
  <Container>
    <header class="text-center mt-[109px] mb-[82px]">
      <h1 class="text-5xl mb-[50px] font-bold text-textColor">Moviemojify</h1>
      <p class="text-white">
        Create custom emojis from your favorite movie titles!
      </p>
    </header>

    <main class="flex justify-center m-auto flex-col max-w-sm">
      <EmojiResult client:load />
    </main>

		
  </Container>
</Layout>

